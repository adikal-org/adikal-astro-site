<section id="pricing" class="py-20 border-t border-white/5">
  <div class="max-w-5xl mx-auto px-4">
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-white mb-4">
        <span class="text-adikal-green">03.</span> The Adikal Advantage
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl">Don't just hire. Partner with experts.</p>
    </div>

    <!-- Comparison Container -->
    <div class="border border-white/10 bg-white/5 overflow-hidden">
      <!-- Header Row -->
      <div class="grid grid-cols-1 md:grid-cols-2 border-b border-white/10">
        <div class="p-6 md:p-8 border-b md:border-b-0 md:border-r border-white/10">
          <h3 class="text-xl font-bold text-gray-400">Traditional Hiring</h3>
          <p class="text-sm text-gray-500 mt-2">High cost, high management overhead</p>
        </div>
        <div class="p-6 md:p-8 bg-white/5 relative overflow-hidden">
          <div class="absolute top-0 right-0 w-20 h-20 bg-adikal-green/10 rounded-bl-full -mr-10 -mt-10"></div>
          <h3 class="text-xl font-bold text-white relative z-10">The Adikal Model</h3>
          <p class="text-sm text-adikal-green mt-2 relative z-10">Streamlined, expert-led, cost-effective</p>
        </div>
      </div>

      <!-- Comparison Points -->
      <div class="divide-y divide-white/10">
        <!-- Cost -->
        <div class="grid grid-cols-1 md:grid-cols-2">
           <div class="p-6 md:px-8 md:py-6 md:border-r border-white/10 flex flex-col justify-center">
             <span class="text-red-400 font-mono text-lg mb-1">$150k+ / year</span>
             <span class="text-gray-500 text-sm">Salary + Benefits + Equity</span>
           </div>
           <div class="p-6 md:px-8 md:py-6 bg-white/5 flex flex-col justify-center">
             <span class="text-adikal-green font-mono text-lg mb-1">$60k / year</span>
             <span class="text-gray-400 text-sm">Flat monthly fee ($5k/mo)</span>
           </div>
        </div>

        <!-- Expertise -->
        <div class="grid grid-cols-1 md:grid-cols-2">
           <div class="p-6 md:px-8 md:py-6 md:border-r border-white/10">
             <h4 class="text-white font-medium mb-1">Single Point of Failure</h4>
             <p class="text-gray-500 text-sm">Dependent on one person's knowledge and availability.</p>
           </div>
           <div class="p-6 md:px-8 md:py-6 bg-white/5">
             <h4 class="text-white font-medium mb-1">Collective Expertise</h4>
             <p class="text-gray-400 text-sm">Access to a team of seniors with diverse cloud experience.</p>
           </div>
        </div>

        <!-- Speed -->
        <div class="grid grid-cols-1 md:grid-cols-2">
           <div class="p-6 md:px-8 md:py-6 md:border-r border-white/10">
             <h4 class="text-white font-medium mb-1">Slow Onboarding</h4>
             <p class="text-gray-500 text-sm">Months to recruit, hire, and ramp up.</p>
           </div>
           <div class="p-6 md:px-8 md:py-6 bg-white/5">
             <h4 class="text-white font-medium mb-1">Immediate Impact</h4>
             <p class="text-gray-400 text-sm">Start executing on day one with established best practices.</p>
           </div>
        </div>
        
         <!-- Management -->
        <div class="grid grid-cols-1 md:grid-cols-2">
           <div class="p-6 md:px-8 md:py-6 md:border-r border-white/10">
             <h4 class="text-white font-medium mb-1">Management Burden</h4>
             <p class="text-gray-500 text-sm">Requires engineering management and career pathing.</p>
           </div>
           <div class="p-6 md:px-8 md:py-6 bg-white/5">
             <h4 class="text-white font-medium mb-1">Zero Overhead</h4>
             <p class="text-gray-400 text-sm">We manage the output and quality. You focus on product.</p>
           </div>
        </div>
      </div>
      
       <!-- Call to Action Footer within the comparison -->
      <div class="p-8 bg-white/5 border-t border-white/10 text-center">
        <p class="text-white mb-6">Ready to upgrade your engineering capability?</p>
        <a href="#contact" class="inline-block bg-adikal-green text-black font-bold py-3 px-8 hover:bg-white transition-colors">
          Start Engagement
        </a>
      </div>

    </div>
  </div>
</section>