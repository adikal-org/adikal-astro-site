---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Thank You - Adikal">
  <Header />
  <section class="min-h-screen flex items-center justify-center bg-adikal-black relative">
    <div class="container mx-auto px-4 text-center z-10">
      <h1 class="text-5xl font-bold text-white mb-6">Message Received</h1>
      <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Thanks for reaching out! We'll be in touch with you shortly to discuss how Adikal can help you scale.
      </p>
      <a href="/" class="bg-adikal-green text-black font-bold py-3 px-8 hover:bg-white transition-colors inline-block">
        Back to Home
      </a>
    </div>
  </section>
  <Footer />
</Layout>